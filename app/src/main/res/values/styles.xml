<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Main Activity theme-->
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Calendar week header item-->
    <style name="CalendarWeekDayHeader" >
        <item name="android:textSize">@dimen/calendar_week_item_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/item_week_calendar_day_text_color</item>
        <item name="android:background">@color/item_week_calendar_day_color</item>
    </style>

    <!--Calendar week item-->
    <style name="CalendarWeekDayItem">
        <item name="android:background">@drawable/item_week_calendar_background_selector</item>
        <item name="android:textColor">@drawable/item_week_calendar_text_color_selector</item>
        <item name="android:textSize">@dimen/calendar_week_item_text_size</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>
