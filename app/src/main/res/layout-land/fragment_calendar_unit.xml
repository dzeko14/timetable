<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/calendar_day_header_1"
        layout="@layout/calendar_week_header_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/calendar_day_header"
        app:layout_constraintTop_toBottomOf="@+id/month_fragment_calendar_unit" />

    <TextView
        android:id="@+id/month_fragment_calendar_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text view" />

    <include
        android:id="@+id/calendar_day_header"
        layout="@layout/calendar_week_header_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/calendar_day_header_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_fragment_calendar_unit" />

    <include
        android:id="@+id/calendar_day_numbers_1"
        layout="@layout/calendar_week_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_header"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day_header" />

    <include
        android:id="@+id/calendar_day_numbers_2"
        layout="@layout/calendar_week_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_header_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_header_1"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day_header_1" />

    <include
        android:id="@+id/calendar_day_numbers_3"
        layout="@layout/calendar_week_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_header"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day_numbers_2" />

    <include
        android:id="@+id/calendar_day_numbers_4"
        layout="@layout/calendar_week_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_numbers_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_numbers_2"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day_numbers_2" />

    <include
        android:id="@+id/calendar_day_numbers_5"
        layout="@layout/calendar_week_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_header"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day_numbers_4" />

    <include
        android:id="@+id/calendar_day_numbers_6"
        layout="@layout/calendar_week_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_numbers_4"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_numbers_4"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day_numbers_4" />


</android.support.constraint.ConstraintLayout>

